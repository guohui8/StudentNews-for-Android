<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0.0"
    android:pivotX="50.0%"
    android:pivotY="50.0%"
    android:toDegrees="360.0" >

    <shape
        android:innerRadiusRatio="3.0"
        android:shape="ring"
        android:thicknessRatio="8.0"
        android:useLevel="false" >
        <gradient
            android:centerColor="@color/tv_blue_center_color"
            android:centerY="0.5"
            android:endColor="@color/tv_blue_end_color"
            android:startColor="@color/tv_blue_start_color"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>